# ========================================================================
# LoLShorts Production Environment Configuration
# ========================================================================
#
# IMPORTANT: Copy this file to `.env` and configure for your environment.
# Never commit real credentials to version control.
#
# Usage:
#   1. Copy:   cp .env.production.example .env
#   2. Edit:   Configure values below
#   3. Build:  cargo tauri build

# ========================================================================
# Application Settings
# ========================================================================

# Application mode (development | staging | production)
APP_ENV=production

# Application data directory
# Leave empty to use default: %APPDATA%\LoLShorts
APP_DATA_DIR=

# Temporary files directory
# Leave empty to use default: %TEMP%\LoLShorts
TEMP_DIR=

# ========================================================================
# Logging Configuration
# ========================================================================

# Log level (trace | debug | info | warn | error)
RUST_LOG=info

# Log file rotation
# Maximum log file size in MB before rotation
LOG_MAX_SIZE_MB=100

# Number of archived log files to keep
LOG_MAX_FILES=10

# Log output format (json | pretty | compact)
LOG_FORMAT=json

# ========================================================================
# Video Processing
# ========================================================================

# FFmpeg binary path
# Leave empty to use bundled FFmpeg
FFMPEG_PATH=

# FFprobe binary path
# Leave empty to use bundled FFprobe
FFPROBE_PATH=

# Hardware acceleration preference (nvenc | qsv | amf | auto | none)
# nvenc: NVIDIA NVENC (RTX/GTX GPUs)
# qsv: Intel Quick Sync Video (Intel iGPU)
# amf: AMD AMF (Radeon GPUs)
# auto: Automatically detect best available
# none: Software encoding (fallback)
HW_ACCEL=auto

# Video encoder preset (ultrafast | superfast | veryfast | faster | fast | medium | slow | slower | veryslow)
# Faster = larger file size, Slower = better quality
ENCODER_PRESET=medium

# Video quality (CRF: 0-51, lower = better quality, 18-28 recommended)
VIDEO_CRF=23

# ========================================================================
# Recording Settings
# ========================================================================

# Replay buffer duration in seconds (30-300)
REPLAY_BUFFER_DURATION=60

# Recording resolution (1920x1080 | 2560x1440 | 3840x2160)
RECORDING_RESOLUTION=1920x1080

# Recording framerate (30 | 60 | 120 | 144 | 240)
RECORDING_FPS=60

# ========================================================================
# League Client API
# ========================================================================

# LCU port range (default: 2999-56000)
LCU_PORT_MIN=2999
LCU_PORT_MAX=56000

# LCU connection timeout in milliseconds
LCU_CONNECTION_TIMEOUT=30000

# LCU polling interval in milliseconds
LCU_POLL_INTERVAL=5000

# ========================================================================
# Live Client API
# ========================================================================

# Live Client API URL
LIVE_CLIENT_URL=https://127.0.0.1:2999

# Live Client polling interval in milliseconds
LIVE_CLIENT_POLL_INTERVAL=1000

# ========================================================================
# Storage Configuration
# ========================================================================

# Clips storage directory
# Leave empty to use default: %APPDATA%\LoLShorts\clips
CLIPS_DIR=

# Canvas templates directory
# Leave empty to use default: %APPDATA%\LoLShorts\templates
TEMPLATES_DIR=

# Maximum clips per game (5-50)
MAX_CLIPS_PER_GAME=20

# Automatic cleanup after days (0 = disabled)
AUTO_CLEANUP_DAYS=30

# ========================================================================
# Performance Settings
# ========================================================================

# Worker thread pool size (0 = auto-detect)
WORKER_THREADS=0

# Memory limit in MB (0 = unlimited)
MEMORY_LIMIT_MB=0

# Disk space warning threshold in GB
DISK_SPACE_WARNING_GB=10

# ========================================================================
# Authentication & Payments (Optional)
# ========================================================================

# Supabase configuration (if using cloud features)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key

# Toss Payments configuration (if using premium features)
# TOSS_CLIENT_KEY=live_ck_your_client_key
# TOSS_SECRET_KEY=live_sk_your_secret_key

# ========================================================================
# Monitoring & Analytics (Optional)
# ========================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Application Insights instrumentation key
# APP_INSIGHTS_KEY=your-instrumentation-key

# Analytics tracking (true | false)
ENABLE_ANALYTICS=false

# Telemetry reporting (true | false)
ENABLE_TELEMETRY=false

# ========================================================================
# Feature Flags
# ========================================================================

# Enable beta features (true | false)
ENABLE_BETA_FEATURES=false

# Enable debug UI overlay (true | false)
ENABLE_DEBUG_UI=false

# Enable performance profiling (true | false)
ENABLE_PROFILING=false

# Enable experiment tracking (true | false)
ENABLE_EXPERIMENTS=false

# ========================================================================
# Security Configuration
# ========================================================================

# HTTPS certificate verification (true | false)
# WARNING: Only disable for development/testing
VERIFY_SSL=true

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=500

# ========================================================================
# Build Information (Auto-populated during build)
# ========================================================================

# Build timestamp (set automatically)
# BUILD_TIMESTAMP=2025-01-06T12:00:00Z

# Build version (from Cargo.toml)
# BUILD_VERSION=1.0.0

# Git commit hash (set automatically)
# GIT_COMMIT_HASH=abc123

# Build environment
# BUILD_ENV=production
